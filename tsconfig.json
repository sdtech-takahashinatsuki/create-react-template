{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES2020",
        "module": "nodenext",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/packages/*"]
        },
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["scripts", "src"],
    "exclude": [
        "node_modules",
        "dist",
        "example",
        "src/create-template/template/next",
        "src/create-template/template/tanstack-router"
    ]
}
